{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": [
      "ESNext"
    ],
    "allowJs": false,
    "outDir": "../../dist",
    "rootDir": "../../",
    "baseUrl": "../../",
    "strict": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "app/*"
      ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": [
    "*.ts",
    "../../app/tasks/*.ts",
    "../../app/controllers/**/*.ts",
    "../../site/_api/**/*.ts",
  ]
}
